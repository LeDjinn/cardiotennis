<h1>Les Programmes pour les 34 s√©ances </h1>
<div class='container'>
<table class='table'>
  <thead>
    <tr>
      
      <th scope='col'>Numero du cours</th>
      <th scope='col'>Semaine</th>
      <th scope='col'>Theme de la session</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @programs.sort_by(&:num).each do |program| %>
      <tr>
        
        <td><%= program.num %></td>
        <td><%= program.semaine %></td>
        <td><%= program.themeg %></td>
        
        
        <td><%= link_to 'Voir', program, {:class=>'btn btn-warning'} %></td>
        <td><%= link_to 'MODIFIER', edit_program_path(program), {:class=>'btn btn-primary'} %></td>
        <td><%= link_to 'EFFACER', program, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

